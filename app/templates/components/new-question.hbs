{{#if addNewQuestion}}
<div class="container">
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="question">Question</label>
      {{textarea rows="4" cols="85" value=question id="question"}}
    </div>
    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date" type="date"}}
    </div>
    <div class="form-group">
      <label for="notes">Notes</label>
      {{textarea rows="3" cols="50" value=notes id="notes"}}
    </div>
    <button {{action 'saveQuestion'}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'questionFormShow'}}> New Question</button>
{{/if}}
