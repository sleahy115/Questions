{{#if updateQuestionForm}}
<div class="well">
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="body">Question</label>
      {{textarea rows="4" cols="85" value=body id="body"}}
    </div>
    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date" type="date"}}
    </div>
    <div class="form-group">
      <label for="notes">Notes</label>
      {{textarea rows="3" cols="50" value=notes id="notes"}}
    </div>
    <button {{action 'update' question}}>Save changes</button>
  </form>
</div>
{{else}}
<button {{action 'updateQuestionForm'}}>Update this question</button>
{{/if}}
